<script src="https://kit.fontawesome.com/b8df303df0.js" crossorigin="anonymous"></script>

<h1>User info</h1>

<%= image_tag user.get_profile_image(100,100) %>
<table>
  <tbody>
    <tr>
      <th>name</th><th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction<th>
      <th><%= user.introduction %></th>
      </tr>
      
  </tbody>
</table>

 <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block " do %>
<i class="fas fa-user-cog" ></i>
<% end %>

<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model: book,local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Opinion</h4>
  <%= f.text_area :body %>
	
  <div class="actions"><%= f.submit 'Create Book' %></div>
<% end %>