<div class="container px-5 px-sm-0">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
      <%= render 'list', user: @user %>
    </div>
    <div class="col-md-9">
      <h2>Books</h2>
<table class="table table-striped">

<thead>
  <tr><th></th><th>Title</th><th>Opinion</th><th colspan='4'></th></tr>
</thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= image_tag book.user.get_profile_image(100,100) %></td>
      <td>
      <span><%= link_to book_path(book.id) do%>
      <%= book.title%>
      <%end%>
    </span>
    </td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
  </table>
    </div>
    </div>
  </div>
</div>