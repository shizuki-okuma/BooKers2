<%= form_with model: @book do |f| %>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5">
      <h2>Editing Book</h2>
      
      <div class="form-group">
      <label for="book_title">Title</label>
      <input class="form-control book_title" type="text" value="" name="book[title]" id="book_title"></input>
      </div> 
      
      <div class="form-group">
      <label for="book_opinion">Opinion</label><br>
      <textarea class="form-control-book_body" name="book[body]" id="book_body"></textarea>
      </div>
    
<%= f.submit "Update Book" %>
<%= link_to "Show", book_path(@book.id) %>
  |
<%= link_to "Back", books_path %>
<% end %>
    </div>
  </div>
</div>
 