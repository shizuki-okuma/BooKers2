<div class="container px-5 px-sm-0">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
      <%= render 'books/list', user: @user %>
      </div>
    <div class="col-md-9">
    <table class="table table-striped">
    <tbody>
    <h2>Books</h2>
       
      <thead>
        <tr>
          <th></th><th>Title</th><th>Opinion</th>
        </tr>
      </thead>
       <% @books.each do |book| %>
      <tr>
        <td><%= image_tag @user.get_profile_image(100,100) %></td>
       
        <td><%= link_to book_path(book.id) do%>
        <%= book.title %> 
        <%end%>
        </td>
       
        <td><%= book.body %></td>
      </tr>
    <% end %>
    </tbody>
    </table>
    </div>
    </div>
  </div>
</div>