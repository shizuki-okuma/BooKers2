
<%= form_with model: @user do |f| %>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5">
      <h2>User info</h2>
      <div class="form-group">
      <label for="user_name">Name</label>
      <input class="form-control name" type="text" value="shizuki" name="user[name]" id="user_name"></input>
      </div> 
      
        <div class="form-group">
        <label for="inputImage">Image</label>
        
        <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %> 
        </div>
        
      <div class="form-group">
      <label for="inputIntroduction">Introduction</label><br>
      <textarea class="form-control-introduction" name="user[introduction]" id="user_introduction"></textarea>
      </div>
  <%= f.submit "Update User" %>
<% end %>
  </div>
</div>
</div>


